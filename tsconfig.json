{
  "compilerOptions": {
    "target": "ES2020", // 最新の ES バージョンに変更
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // コンパイル後の出力ディレクトリ
    "rootDir": "./src" // ソースファイルのルートディレクトリ
  },
  "include": ["src/**/*"]
}
